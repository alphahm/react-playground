{
  "name": "react-playground",
  "version": "1.0.0",
  "description": "A simple collection of packages to play with react",
  "main": "./src/app.js",
  "scripts": {
    "postinstall": "node init-dist.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all --parallel watch serve",
    "watch": "watchify src/app.js --extension=.jsx -d -o ./dist/js/bundle.js -v",
    "build": "browserify src/app.js --extension=.jsx | uglifyjs -mco ./dist/js/bundle.js",
    "serve": "lite-server"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "author": "alphahm",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "lite-server": "^2.4.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "uglify-es": "^3.3.9",
    "watchify": "^3.11.0"
  }
}
